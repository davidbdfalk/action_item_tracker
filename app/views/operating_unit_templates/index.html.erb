<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All operating units
    </h1>

    <a href="/operating_units/new" class="btn btn-block btn-outline-secondary">
      Add a new operating unit
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "operating_unit_templates/operating_units_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Operating unit
        </th>

        <th>
          Vice president
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @operating_units.each do |operating_unit| %>
      <tr>
        <td>
          <%= operating_unit.id %>
        </td>

        <td>
          <%= operating_unit.operating_unit %>
        </td>

        <td>
          <% if operating_unit.vice_president.present? %>
            <a href="/users/<%= operating_unit.vice_president.id %>">
              <%= operating_unit.vice_president.username %>
            </a>
          <% end %>
        </td>

        <td>
          <%= time_ago_in_words(operating_unit.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(operating_unit.updated_at) %> ago
        </td>

        <td>
          <a href="/operating_units/<%= operating_unit.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @operating_units, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
