<% if @operating_unit.errors.any? %>
  <% @operating_unit.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit operating unit #<%= @operating_unit.id %>
</h1>

<hr>

<form action="/update_operating_unit/<%= @operating_unit.id %>" method="post">

  <div class="form-group">
    <label for="operating_unit">
      Operating unit
    </label>

    <input type="text" id="operating_unit" name="operating_unit" class="form-control" value="<%= @operating_unit.operating_unit %>">
  </div>

  <div class="form-group">
    <label for="vice_president_id">
      Vice president
    </label>

    <%= select_tag(:vice_president_id, options_from_collection_for_select(User.all, :id, :username, @operating_unit.vice_president_id), :class => "form-control") %>
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Update operating unit
  </button>
</form>

<hr>

<a href="/operating_units">
  Go back
</a>
