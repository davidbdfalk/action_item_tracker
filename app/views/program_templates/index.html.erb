<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All programs
    </h1>

    <a href="/programs/new" class="btn btn-block btn-outline-secondary">
      Add a new program
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Program
        </th>

        <th>
          Program manager
        </th>

        <th>
          Business unit
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @programs.each do |program| %>
      <tr>
        <!-- Display program.id start -->
        <td>
          <%= program.id %>
        </td>
        <!-- Display program.id end -->

        <!-- Display program.program start -->
        <td>
          <%= program.program %>
        </td>
        <!-- Display program.program end -->

        <!-- Display program.program_manager_id start -->
        <td>
          <%= program.program_manager.username %>
        </td>
        <!-- Display program.program_manager_id end -->

        <!-- Display program.business_unit_id start -->
        <td>
          <%= program.business_unit.business_unit %>
        </td>
        <!-- Display program.business_unit_id end -->

        <!-- Display program.created_at start -->
        <td>
          <%= time_ago_in_words(program.created_at) %> ago
        </td>
        <!-- Display program.created_at end -->

        <!-- Display program.updated_at start -->
        <td>
          <%= time_ago_in_words(program.updated_at) %> ago
        </td>
        <!-- Display program.updated_at end -->

        <td>
          <a href="/programs/<%= program.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
