<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All agile teams
    </h1>

    <a href="/agile_teams/new" class="btn btn-block btn-outline-secondary">
      Add a new agile team
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "agile_team_templates/agile_teams_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Agile team
        </th>

        <th>
          Scrum master
        </th>

        <th>
          Program
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @agile_teams.each do |agile_team| %>
      <tr>
        <td>
          <%= agile_team.id %>
        </td>

        <td>
          <%= agile_team.agile_team %>
        </td>

        <td>
          <% if agile_team.scrum_master.present? %>
            <a href="/users/<%= agile_team.scrum_master.id %>">
              <%= agile_team.scrum_master.username %>
            </a>
          <% end %>
        </td>

        <td>
          <% if agile_team.program.present? %>
            <a href="/programs/<%= agile_team.program.id %>">
              <%= agile_team.program.program %>
            </a>
          <% end %>
        </td>

        <td>
          <%= time_ago_in_words(agile_team.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(agile_team.updated_at) %> ago
        </td>

        <td>
          <a href="/agile_teams/<%= agile_team.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @agile_teams, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
