<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All agile teams
    </h1>

    <a href="/agile_teams/new" class="btn btn-block btn-outline-secondary">
      Add a new agile team
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Agile team
        </th>

        <th>
          Scrum master
        </th>

        <th>
          Program
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @agile_teams.each do |agile_team| %>
      <tr>
        <!-- Display agile_team.id start -->
        <td>
          <%= agile_team.id %>
        </td>
        <!-- Display agile_team.id end -->

        <!-- Display agile_team.agile_team start -->
        <td>
          <%= agile_team.agile_team %>
        </td>
        <!-- Display agile_team.agile_team end -->

        <!-- Display agile_team.scrum_master_id start -->
        <td>
          <%= agile_team.scrum_master.username %>
        </td>
        <!-- Display agile_team.scrum_master_id end -->

        <!-- Display agile_team.program_id start -->
        <td>
          <%= agile_team.program_id %>
        </td>
        <!-- Display agile_team.program_id end -->

        <!-- Display agile_team.created_at start -->
        <td>
          <%= time_ago_in_words(agile_team.created_at) %> ago
        </td>
        <!-- Display agile_team.created_at end -->

        <!-- Display agile_team.updated_at start -->
        <td>
          <%= time_ago_in_words(agile_team.updated_at) %> ago
        </td>
        <!-- Display agile_team.updated_at end -->

        <td>
          <a href="/agile_teams/<%= agile_team.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
