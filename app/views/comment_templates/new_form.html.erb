<h1>
  Add a new comment
</h1>


<hr>

<!-- Form comment start -->
<form action="/create_comment" method="post">
<!-- Form comment end -->

  <!-- Label and input for body start -->
  <div class="form-group">
    <label for="body">
      Body
    </label>

    <!-- Input for body start -->
    <textarea id="body" name="body" class="form-control" rows="3"></textarea>
    <!-- Input for body end -->
  </div>
  <!-- Label and input for body end -->

  <!-- Label and input for commenter_id start -->
  <!-- Input for "commenter_id" start -->
  <input type="hidden" name="commenter_id" value="<%= current_user.id %>">
  <!-- Input for "commenter_id" end -->
  <!-- Label and input for commenter_id end -->

  <!-- Label and input for action_item_id start -->
  <div class="form-group">
    <label for="action_item_id">
      Action item
    </label>

    <!-- Input for action_item_id start -->
    <%= select_tag(:action_item_id, options_from_collection_for_select(ActionItem.all, :id, :created_at, @comment.action_item_id), :class => "form-control") %>
    <!-- Input for action_item_id end -->
  </div>
  <!-- Label and input for action_item_id end -->

  <button class="btn btn-block btn-outline-secondary">
    Create comment
  </button>
</form>

<hr>

<a href="/comments">
  Go back
</a>
