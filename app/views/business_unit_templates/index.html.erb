<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All business units
    </h1>

    <a href="/business_units/new" class="btn btn-block btn-outline-secondary">
      Add a new business unit
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Business unit
        </th>

        <th>
          Director
        </th>

        <th>
          Operating unit
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @business_units.each do |business_unit| %>
      <tr>
        <!-- Display business_unit.id start -->
        <td>
          <%= business_unit.id %>
        </td>
        <!-- Display business_unit.id end -->

        <!-- Display business_unit.business_unit start -->
        <td>
          <%= business_unit.business_unit %>
        </td>
        <!-- Display business_unit.business_unit end -->

        <!-- Display business_unit.director_id start -->
        <td>
          <%= business_unit.director.username %>
        </td>
        <!-- Display business_unit.director_id end -->

        <!-- Display business_unit.operating_unit_id start -->
        <td>
          <%= business_unit.operating_unit.operating_unit %>
        </td>
        <!-- Display business_unit.operating_unit_id end -->

        <!-- Display business_unit.created_at start -->
        <td>
          <%= time_ago_in_words(business_unit.created_at) %> ago
        </td>
        <!-- Display business_unit.created_at end -->

        <!-- Display business_unit.updated_at start -->
        <td>
          <%= time_ago_in_words(business_unit.updated_at) %> ago
        </td>
        <!-- Display business_unit.updated_at end -->

        <td>
          <a href="/business_units/<%= business_unit.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @business_units, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
