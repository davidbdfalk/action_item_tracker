<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All business units
    </h1>

    <a href="/business_units/new" class="btn btn-block btn-outline-secondary">
      Add a new business unit
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "business_unit_templates/business_units_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Business unit
        </th>

        <th>
          Director
        </th>

        <th>
          Operating unit
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @business_units.each do |business_unit| %>
      <tr>
        <td>
          <%= business_unit.id %>
        </td>

        <td>
          <%= business_unit.business_unit %>
        </td>

        <td>
          <% if business_unit.director.present? %>
            <a href="/users/<%= business_unit.director.id %>">
              <%= business_unit.director.username %>
            </a>
          <% end %>
        </td>

        <td>
          <% if business_unit.operating_unit.present? %>
            <a href="/operating_units/<%= business_unit.operating_unit.id %>">
              <%= business_unit.operating_unit.operating_unit %>
            </a>
          <% end %>
        </td>

        <td>
          <%= time_ago_in_words(business_unit.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(business_unit.updated_at) %> ago
        </td>

        <td>
          <a href="/business_units/<%= business_unit.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @business_units, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
