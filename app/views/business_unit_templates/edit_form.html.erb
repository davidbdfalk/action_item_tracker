<h1>
  Edit business unit #<%= @business_unit.id %>
</h1>

<hr>

<!-- Form business_unit start -->
<form action="/update_business_unit/<%= @business_unit.id %>" method="post">
<!-- Form business_unit end -->

  <!-- Label and input for business_unit start -->
  <div class="form-group">
    <label for="business_unit">
      Business unit
    </label>

    <!-- Input for business_unit start -->
    <input type="text" id="business_unit" name="business_unit" class="form-control" value="<%= @business_unit.business_unit %>">
    <!-- Input for business_unit end -->
  </div>
  <!-- Label and input for business_unit end -->

  <!-- Label and input for director_id start -->
  <div class="form-group">
    <label for="director_id">
      Director
    </label>

    <!-- Input for director_id start -->
    <%= select_tag(:director_id, options_from_collection_for_select(User.all, :id, :username, @business_unit.director_id), :class => "form-control") %>
    <!-- Input for director_id end -->
  </div>
  <!-- Label and input for director_id end -->

  <!-- Label and input for operating_unit_id start -->
  <div class="form-group">
    <label for="operating_unit_id">
      Operating unit
    </label>

    <!-- Input for operating_unit_id start -->
    <input type="text" id="operating_unit_id" name="operating_unit_id" class="form-control" value="<%= @business_unit.operating_unit_id %>">
    <!-- Input for operating_unit_id end -->
  </div>
  <!-- Label and input for operating_unit_id end -->

  <button class="btn btn-block btn-outline-secondary">
    Update business unit
  </button>
</form>

<hr>

<a href="/business_units">
  Go back
</a>
