<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Programs

    <a data-toggle="collapse" href="#business_unit_programs_new_form">
      Add program
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @business_unit.programs.each do |program| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/programs/<%= program.id %>">
          <%= program.program %>
        </a>

        <a href="/delete_program_from_business_unit/<%= program.id %>">
          Delete
        </a>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="business_unit_programs_new_form">
        <%= render partial: "business_unit_templates/business_unit_programs_new_form" %>
      </div>
    </div>

  </ul>
</div>
