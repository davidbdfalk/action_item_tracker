<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Business Units

    <a data-toggle="collapse" href="#user_business_units_new_form">
      Add business unit
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @user.business_units.each do |business_unit| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <!-- Show link start -->
        <a href="/business_units/<%= business_unit.id %>">
          <%= business_unit.business_unit %>
        </a>
        <!-- Show link end -->

      </li>
    <% end %>

  </ul>
</div>
