<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All action items
    </h1>

    <a href="/action_items/new" class="btn btn-block btn-outline-secondary">
      Add a new action item
    </a>
  </div>
</div>

<!-- Ransack Code start -->
<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "action_item_templates/action_items_search_form" %>
  </div>
</div>
<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Assigner
        </th>

        <th>
          Actionee
        </th>

        <th>
          Action item
        </th>

        <th>
          Description
        </th>

        <th>
          Deadline
        </th>

        <th>
          Status
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @action_items.each do |action_item| %>
      <tr>
        <!-- Display action_item.id start -->
        <td>
          <%= action_item.id %>
        </td>
        <!-- Display action_item.id end -->

        <!-- Display action_item.assigner_id start -->
        <td>
          <% if action_item.sender.present? %>
            <a href="/users/<%= action_item.sender.id %>">
              <%= action_item.sender.username %>
            </a>
          <% end %>
        </td>
        <!-- Display action_item.assigner_id end -->

        <!-- Display action_item.actionee_id start -->
        <td>
          <% if action_item.recipient.present? %>
            <a href="/users/<%= action_item.recipient.id %>">
              <%= action_item.recipient.username %>
            </a>
          <% end %>
        </td>
        <!-- Display action_item.actionee_id end -->

        <!-- Display action_item.action_item start -->
        <td>
          <%= action_item.action_item %>
        </td>
        <!-- Display action_item.action_item end -->

        <!-- Display action_item.description start -->
        <td>
          <%= action_item.description %>
        </td>
        <!-- Display action_item.description end -->

        <!-- Display action_item.deadline start -->
        <td>
          <%= action_item.deadline %>
        </td>
        <!-- Display action_item.deadline end -->

        <!-- Display action_item.status start -->
        <td>
          <%= action_item.status %>
        </td>
        <!-- Display action_item.status end -->

        <!-- Display action_item.created_at start -->
        <td>
          <%= time_ago_in_words(action_item.created_at) %> ago
        </td>
        <!-- Display action_item.created_at end -->

        <!-- Display action_item.updated_at start -->
        <td>
          <%= time_ago_in_words(action_item.updated_at) %> ago
        </td>
        <!-- Display action_item.updated_at end -->

        <td>
          <a href="/action_items/<%= action_item.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @action_items, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
